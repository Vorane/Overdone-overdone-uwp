<Application
    x:Class="overdone_uwp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:overdone_uwp"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary  >
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\ColorsAndBrushes.xaml"/>
                <ResourceDictionary Source="Resources\DefaultStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="MainThemeColor" Color="#00838F"/>
            <SolidColorBrush x:Key="AccentThemeColor" Color="#FF6D00"/>
            <SolidColorBrush x:Key="ThirdThemeColor" Color="#45514F"/>

        </ResourceDictionary>

        
    </Application.Resources>

</Application>

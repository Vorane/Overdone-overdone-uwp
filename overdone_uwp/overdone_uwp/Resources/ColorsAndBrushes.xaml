<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:overdone_uwp.Resources">
    <!-- Colors -->
    <Color x:Key="MainColor">#FF006064</Color>
    <Color x:Key="DarkMainColor">#FF23a28d</Color>
    <Color x:Key="MainTextColor">#FF2A2A2A</Color>
    <Color x:Key="OtherTextColor">#FF7A7A7A</Color>
    <Color x:Key="LightGreyColor">#FFded5d6</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="MainColorBrush" Color="{StaticResource MainColor}"/>
    <SolidColorBrush x:Key="DarkMainColorBrush" Color="{StaticResource DarkMainColor}"/>
    <SolidColorBrush x:Key="MainTextColorBrush" Color="{StaticResource MainTextColor}"/>
    <SolidColorBrush x:Key="OtherTextColorBrush" Color="{StaticResource OtherTextColor}"/>
    <SolidColorBrush x:Key="LightGreyColorBrush" Color="{StaticResource LightGreyColor}"/>
</ResourceDictionary>
    
    
